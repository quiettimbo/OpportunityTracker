@page "/Opportunities/{OId}/Activities/"
@model OpportunityTracker.Pages.Activities.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activity[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity[0].Opportunity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity[0].Result)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Activity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opportunity.OpportunityID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ActivityID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ActivityID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ActivityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
