@page "/Opportunities/{OId:int}/Activities/Edit/{Id:int}"
@model OpportunityTracker.Pages.Activities.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Activity.ActivityID" />
            <div class="form-group">
                <label asp-for="Activity.Description" class="control-label"></label>
                <input asp-for="Activity.Description" class="form-control" />
                <span asp-validation-for="Activity.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.OpportunityID" class="control-label"></label>
                <select asp-for="Activity.OpportunityID" class="form-control" asp-items="ViewBag.OpportunityID"></select>
                <span asp-validation-for="Activity.OpportunityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.Date" class="control-label"></label>
                <input asp-for="Activity.Date" class="form-control" />
                <span asp-validation-for="Activity.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.Result" class="control-label"></label>
                <select asp-for="Activity.Result" class="form-control"></select>
                <span asp-validation-for="Activity.Result" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
