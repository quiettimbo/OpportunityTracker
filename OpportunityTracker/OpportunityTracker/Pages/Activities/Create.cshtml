@page "/Opportunities/{OId:int}/Activities/Create"
@model OpportunityTracker.Pages.Activities.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Activity For: @Html.DisplayFor(model => model.Opportunity.Title)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Activity.Description" class="control-label"></label>
                <input asp-for="Activity.Description" class="form-control" />
                <span asp-validation-for="Activity.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.Date" class="control-label"></label>
                <input asp-for="Activity.Date" class="form-control" />
                <span asp-validation-for="Activity.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.Result" class="control-label"></label>
                <select asp-for="Activity.Result" class="form-control" asp-items="Html.GetEnumSelectList<OpportunityData.Activity.ResultType>()"></select>
                <span asp-validation-for="Activity.Result" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Opportunities/Details" asp-route-id="@Model.Opportunity.OpportunityID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
