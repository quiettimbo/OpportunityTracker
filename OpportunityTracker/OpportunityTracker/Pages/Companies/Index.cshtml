@page
@model OpportunityTracker.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].LinkedInUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkedInUrl)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
